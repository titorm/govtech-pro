{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@govtech-pro/types": ["packages/types/src"],
      "@govtech-pro/utils": ["packages/utils/src"],
      "@govtech-pro/config": ["packages/config/src"],
      "@govtech-pro/ui": ["packages/ui/src"]
    }
  },
  "include": [],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    ".turbo"
  ],
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/utils" },
    { "path": "./packages/config" },
    { "path": "./packages/ui" },
    { "path": "./apps/api" },
    { "path": "./apps/web" },
    { "path": "./apps/admin" }
  ]
}