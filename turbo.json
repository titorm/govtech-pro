{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "coverage/**"
            ]
        },
        "type-check": {
            "dependsOn": [
                "^type-check"
            ]
        },
        "clean": {
            "cache": false
        },
        "db:generate": {
            "cache": false
        },
        "db:migrate": {
            "cache": false
        },
        "db:seed": {
            "cache": false
        },
        "db:backup": {
            "cache": false
        },
        "db:restore": {
            "cache": false
        },
        "deploy:vercel": {
            "dependsOn": [
                "build",
                "test",
                "lint"
            ]
        }
    }
}