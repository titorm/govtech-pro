{
    "name": "@govtech-pro/api",
    "version": "1.0.0",
    "description": "GovTech Pro API - Node.js + Fastify Backend",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/index.ts",
        "start": "node dist/index.js",
        "clean": "rm -rf dist",
        "type-check": "tsc --noEmit",
        "lint": "eslint src --ext .ts,.tsx --fix",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "db:generate": "drizzle-kit generate:pg",
        "db:migrate": "tsx src/db/migrate.ts",
        "db:seed": "tsx src/db/seed.ts",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "@govtech-pro/types": "workspace:*",
        "@govtech-pro/utils": "workspace:*",
        "@govtech-pro/config": "workspace:*",
        "fastify": "^4.25.2",
        "@fastify/cors": "^8.4.2",
        "@fastify/helmet": "^11.1.1",
        "@fastify/rate-limit": "^9.1.0",
        "@fastify/jwt": "^7.2.4",
        "@fastify/multipart": "^8.0.0",
        "@fastify/static": "^6.12.0",
        "@fastify/swagger": "^8.13.0",
        "@fastify/swagger-ui": "^2.1.0",
        "drizzle-orm": "^0.29.3",
        "drizzle-zod": "^0.5.1",
        "postgres": "^3.4.3",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "zod": "^3.22.4",
        "axios": "^1.6.5",
        "multer": "^1.4.5-lts.1",
        "sharp": "^0.33.2",
        "node-cron": "^3.0.3",
        "winston": "^3.11.0",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/multer": "^1.4.11",
        "@types/node-cron": "^3.0.11",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vitest": "^1.2.0",
        "drizzle-kit": "^0.20.9",
        "@govtech-pro/eslint-config": "workspace:*"
    }
}